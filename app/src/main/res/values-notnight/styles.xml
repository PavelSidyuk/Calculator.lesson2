<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
</style>

<style name="calculator_button_style">
<item name="android:layout_width">0dp</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:layout_gravity">fill_horizontal</item>
<item name="android:layout_margin">@dimen/button_margin</item>
<item name="android:backgroundTint">#FAE104</item>
<item name="android:textColor">#FFFEFE</item>
<item name="android:textSize">20sp</item>
<item name="android:layout_columnWeight">1</item>
<item name="cornerRadius">20dp</item>
</style>

<style name="calculator_button_style.kay_button">
<item name="android:textColor">@color/black</item>
<item name="android:backgroundTint">#FDFDFD</item>
</style>

<style name="calculator_zero_style">
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:layout_columnSpan">2</item>
<item name="android:layout_gravity">fill_horizontal</item>
<item name="android:layout_margin">@dimen/button_margin</item>
<item name="android:backgroundTint">#FDFDFD</item>
<item name="android:textSize">@dimen/button_text_size</item>
<item name="cornerRadius">20dp</item>

</style>
</resources>